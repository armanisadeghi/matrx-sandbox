# ─── Matrx Sandbox Environment Variables ─────────────────────────────────────
# Copy this file to .env and fill in the values.

# ─── AWS ──────────────────────────────────────────────────────────────────────
MATRX_S3_BUCKET=matrx-sandbox-storage-CHANGEME
MATRX_S3_REGION=us-east-1

# AWS credentials (only needed for local dev — EC2 uses IAM instance role)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# ─── Orchestrator ─────────────────────────────────────────────────────────────
MATRX_HOST=0.0.0.0
MATRX_PORT=8000
MATRX_DEBUG=true

# ─── API Authentication ─────────────────────────────────────────────────────────
# Service-to-service API key. If empty, API runs unauthenticated (local dev only).
# Generate one with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
MATRX_API_KEY=

# ─── Database (Sandbox Registry Persistence) ───────────────────────────────────
# Options: "memory" (default, no persistence) or "postgres"
MATRX_SANDBOX_STORE=memory
# Required if MATRX_SANDBOX_STORE=postgres. Standard Postgres connection string.
# MATRX_DATABASE_URL=postgresql://user:password@host:5432/dbname

# ─── Docker / Sandbox ────────────────────────────────────────────────────────
MATRX_SANDBOX_IMAGE=matrx-sandbox:latest
MATRX_CONTAINER_CPU_LIMIT=2.0
MATRX_CONTAINER_MEMORY_LIMIT=4g
MATRX_MAX_SESSION_DURATION_SECONDS=7200
MATRX_SHUTDOWN_TIMEOUT_SECONDS=30
MATRX_DOCKER_NETWORK=bridge
MATRX_CONTAINER_DISK_LIMIT=20g
MATRX_HEALTHCHECK_INTERVAL_SECONDS=30
MATRX_MAX_COMMAND_LENGTH=10000
MATRX_COMMAND_TIMEOUT_SECONDS=300
MATRX_LOG_LEVEL=INFO
